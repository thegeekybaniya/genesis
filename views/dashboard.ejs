<h1 class="mt-4">Dashbaord</h1>
<% include ./partials/messages %>

<p class="lead mb-3">Welcome <%= user.name %></p>
<a href="/users/logout" class="btn btn-secondary">Logout</a>
<a href="/addProduct" class="btn btn-secondary">Add Product</a>



<% if(typeof productArray != 'undefined'){ %> <% productArray.forEach(function(prod) { %>

<div class="card card-body " style="width: 18rem;">
    <h5 class="card-title"> <%= prod.name %></h5>
    <p class="card-text">Quantity:<%= prod.qty %></p>

    <a href="/dashboard/:<%= prod._id%>" class="btn btn-secondary">Buy</a>

</div>    <% }); %> <% } %>

